<div class="center-block">
    <form id="get_item" action="{{ base_URL }}/index.php">
        <p class="list list-wide">
            <input type="hidden" form="get_item" name="page" value="get_item">
            <label for="item_key">Item Key:</label><br>
            <input type="text" form="get_item" id="item_key" name="item_key" value="{{ item_key }}" size="14" maxlength="14" required><br>
            <label for="field_list">Field List (use * for all fields):</label><br>
            <textarea class="field_list" form="get_item" id="field_list" name="field_list" rows="2" cols="60" maxlength="256" required>{{ field_list }}</textarea><br><br>
            <input class="submit" type="submit" form="get_item" value="Get Record">
        </p>
    </form>
</div>
